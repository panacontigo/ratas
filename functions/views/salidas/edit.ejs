<div class="card">
    <div class="card-header">
        <h5 class="card-title mb-0">Editar Salida</h5>
    </div>
    <div class="card-body">
        <form id="editSalidaForm" onsubmit="handleUpdate(event, '<%= salida._id %>')">
            <!-- SelecciÃ³n de Producto -->
            <div class="row mb-3">
                <div class="col-md-12">
                    <label for="product" class="form-label">Producto</label>
                    <input type="text" class="form-control" id="product" value="<%= salida.id_producto.name %>" readonly>
                    <input type="hidden" id="id_producto" name="id_producto" value="<%= salida.id_producto._id %>">
                </div>
            </div>

            <!-- Precio Unitario y Precio de Venta (Solo lectura) -->
            <div class="row mb-3">
                <div class="col-md-6">
                    <label for="precio_unitario" class="form-label">Precio Unitario</label>
                    <div class="input-group">
                        <span class="input-group-text">$</span>
                        <input type="number" step="0.01" class="form-control" id="precio_unitario" name="precio_unitario" value="<%= salida.precio_unitario %>" readonly>
                    </div>
                </div>
                <div class="col-md-6">
                    <label for="precio_venta" class="form-label">Precio de Venta</label>
                    <div class="input-group">
                        <span class="input-group-text">$</span>
                        <input type="number" step="0.01" class="form-control" id="precio_venta" name="precio_venta" value="<%= salida.precio_venta %>" readonly>
                    </div>
                </div>
            </div>

            <!-- Cantidad (Editable) -->
            <div class="row mb-3">
                <div class="col-md-6">
                    <label for="cantidad" class="form-label">Cantidad</label>
                    <input type="number" class="form-control" id="cantidad" name="cantidad" value="<%= salida.cantidad %>" required min="1">
                </div>
            </div>

            <!-- Botones -->
            <div class="d-flex justify-content-between">
                <button type="submit" class="btn btn-primary">
                    <i class="fas fa-save"></i> Actualizar
                </button>
                <button type="button" class="btn btn-secondary" onclick="loadSalidas()">
                    <i class="fas fa-arrow-left"></i> Volver
                </button>
            </div>
        </form>
    </div>
</div> 