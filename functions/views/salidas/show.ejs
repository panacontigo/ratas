<div class="card">
    <div class="card-header">
        <h5 class="card-title mb-0">Detalles de la Salida</h5>
    </div>
    <div class="card-body">
        <div class="row mb-3">
            <div class="col-md-6">
                <label for="id_salida" class="form-label">ID Salida</label>
                <input type="text" class="form-control" id="id_salida" value="<%= salida.id_salida %>" readonly>
            </div>
            <div class="col-md-6">
                <label for="producto" class="form-label">Producto</label>
                <input type="text" class="form-control" id="producto" value="<%= salida.id_producto.name %> (Código: <%= salida.id_producto.code %>)" readonly>
            </div>
        </div>

        <div class="row mb-3">
            <div class="col-md-6">
                <label for="cantidad" class="form-label">Cantidad</label>
                <input type="number" class="form-control" id="cantidad" value="<%= salida.cantidad %>" readonly>
            </div>
            <div class="col-md-6">
                <label for="tipo_salida" class="form-label">Tipo de Salida</label>
                <input type="text" class="form-control" id="tipo_salida" value="<%= salida.tipo_salida %>" readonly>
            </div>
        </div>

        <div class="row mb-3">
            <div class="col-md-6">
                <label for="precio_unitario" class="form-label">Precio Unitario</label>
                <div class="input-group">
                    <span class="input-group-text">$</span>
                    <input type="number" step="0.01" class="form-control" id="precio_unitario" value="<%= salida.precio_unitario.toFixed(2) %>" readonly>
                </div>
            </div>
            <div class="col-md-6">
                <label for="precio_dolar" class="form-label">Precio del Dólar</label>
                <div class="input-group">
                    <span class="input-group-text">$</span>
                    <input type="number" step="0.01" class="form-control" id="precio_dolar" value="<%= salida.precio_dolar.toFixed(2) %>" readonly>
                </div>
            </div>
        </div>

        <div class="row mb-3">
            <div class="col-md-6">
                <label for="cliente" class="form-label">Cliente</label>
                <input type="text" class="form-control" id="cliente" value="<%= salida.cliente %>" readonly>
            </div>
            <div class="col-md-6">
                <label for="fecha_registro" class="form-label">Fecha de Registro</label>
                <input type="text" class="form-control" id="fecha_registro" value="<%= salida.fecha_registro.toLocaleDateString() %>" readonly>
            </div>
        </div>

        <div class="row mb-3">
            <div class="col-md-6">
                <label for="usuario_registro" class="form-label">Usuario que Registró</label>
                <input type="text" class="form-control" id="usuario_registro" value="<%= salida.usuario_registro.name %>" readonly>
            </div>
        </div>

        <div class="d-flex justify-content-between">
            <button type="button" class="btn btn-secondary" onclick="loadSalidas()">
                <i class="fas fa-arrow-left"></i> Volver
            </button>
        </div>
    </div>
</div>