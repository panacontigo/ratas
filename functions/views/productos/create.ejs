<div class="card">
    <div class="card-header">
        <h5 class="card-title mb-0">Crear Nuevo Producto</h5>
    </div>
    <div class="card-body">
        <form id="createProductForm" onsubmit="handleSubmit(event)">
            <!-- Nombre y Descripción -->
            <div class="row mb-3">
                <div class="col-md-6">
                    <label for="code" class="form-label">Código</label>
                    <input type="text" class="form-control" id="code" name="code" required>
                </div>
                <div class="col-md-6">
                    <label for="name" class="form-label">Nombre</label>
                    <input type="text" class="form-control" id="name" name="name" required>
                </div>
                <div class="col-md-6">
                    <label for="description" class="form-label">Descripción</label>
                    <input type="text" class="form-control" id="description" name="description" required>
                </div>
            </div>

            <!-- Precios y Stock -->
            <div class="row mb-3">
                <div class="col-md-4">
                    <label for="cost" class="form-label">Costo</label>
                    <div class="input-group">
                        <span class="input-group-text">$</span>
                        <input type="number" step="0.01" class="form-control" id="cost" name="cost" required>
                    </div>
                </div>
                <div class="col-md-4">
                    <label for="price" class="form-label">Precio de Venta</label>
                    <div class="input-group">
                        <span class="input-group-text">$</span>
                        <input type="number" step="0.01" class="form-control" id="price" name="price" required>
                    </div>
                </div>
                <div class="col-md-4">
                    <label for="stock" class="form-label">Stock</label>
                    <input type="number" class="form-control" id="stock" name="stock" required>
                </div>
            </div>

            <!-- Margen de Ganancia (Calculado automáticamente) -->
            <div class="row mb-3">
                <div class="col-md-6">
                    <div class="card bg-light">
                        <div class="card-body">
                            <h6 class="card-title">Margen de Ganancia</h6>
                            <p class="mb-1">Ganancia: $<span id="profit">0.00</span></p>
                            <p class="mb-0">Porcentaje: <span id="profitPercentage">0.00%</span></p>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Categoría y Ubicación -->
            <div class="row mb-3">
                <div class="col-md-6">
                    <label for="category" class="form-label">Categoría</label>
                    <div class="input-group">
                        <input type="text" class="form-control" id="categorySearch" placeholder="Buscar categoría...">
                        <input type="hidden" id="category" name="category" required>
                    </div>
                    <small class="text-muted">Categoría principal: <span id="mainCategory">-</span></small>
                </div>
                <div class="col-md-6">
                    <label for="location" class="form-label">Ubicación</label>
                    <select class="form-select" id="location" name="location" required>
                        <option value="">Seleccionar ubicación...</option>
                        <% getAllUbicaciones().forEach(function(ubicacion) { %>
                            <option value="<%= ubicacion %>"><%= ubicacion %></option>
                        <% }); %>
                    </select>
                </div>
            </div>

            <!-- Imagen -->
            <div class="row mb-3">
                <div class="col-12">
                    <label for="image" class="form-label">Imagen</label>
                    <input type="file" class="form-control" id="image" accept="image/*" onchange="handleImageUpload(this)">
                    <input type="hidden" name="image" id="imageBase64">
                    <div id="imagePreview" class="mt-2"></div>
                </div>
            </div>

            <!-- Botones -->
            <div class="d-flex justify-content-between">
                <button type="submit" class="btn btn-primary">
                    <i class="fas fa-save"></i> Guardar
                </button>
                <button type="button" class="btn btn-secondary" onclick="loadProducts()">
                    <i class="fas fa-arrow-left"></i> Volver
                </button>
            </div>
        </form>
    </div>
</div>


